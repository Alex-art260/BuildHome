<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ruslan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ruslan.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/awesome/css/all.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
 </head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black text-align-center text-white border-bottom box-shadow mb-3 justify-content-between">
            <div class="container-fluid">
                <div class="navbar-brand mx-auto text-white">Название компании</div>
                <div class="d-flex ml-auto">
                    <span class="fab fa fa-phone" role="button" id="openPhone"></span>
                    <span class="fab fa-whatsapp" role="button" id="openWhatsapp"></span>
                    <span class="fab fa-telegram" role="button" id="openTelegram"></span>
                   
                </div>
            </div>
            <style>
                .container-fluid {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                .navbar-brand {
                    flex-grow: 1;
                    text-align: center;
                }

                .d-flex {
                    display: flex;
                    gap: 10px; /* Задает расстояние между элементами */
                }
            </style>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted bg-black">
        <div class="container d-flex justify-content-center">
            <a class="nav-link text-white" asp-controller="Home" asp-action="AboutCompany">О Нас</a>
            <a class="nav-link text-white" asp-controller="Home" asp-action="BuildHouse">Построенные дома</a>
            <a class="nav-link text-white" asp-controller="Home" asp-action="Contacts">Контакты</a>
        </div>
        <style>
            .container a {
                margin-right: 20px; /* Добавляет отступ справа у каждого элемента */
            }
        </style>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    document.getElementById('openTelegram').addEventListener('click', function () {
        window.location.href = 'tg://resolve?domain=AlexGospodinov';
    });

    document.getElementById('openWhatsapp').addEventListener('click', function () {
        window.location.href = 'https://api.whatsapp.com/send/?phone=89841893469';
    });

    document.getElementById('openPhone').addEventListener('click', function () {
        window.location.href = 'tel:+79841893469';
    });
</script>


